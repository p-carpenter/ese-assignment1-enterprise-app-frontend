{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "baseUrl": "./", // Lets you set a base directory to resolve non-absolute module names.
    "strict": true,
    "noUnusedLocals": false,
    "allowUnreachableCode": false, // pick up dead code paths
    "noUnusedParameters": false,
    "noImplicitAny": true, // In some cases where no type annotations are present, TypeScript will fall back to a type of any for a variable when it cannot infer the type.
    "erasableSyntaxOnly": true,
    "strictNullChecks": true, // When strictNullChecks is true, null and undefined have their own distinct types and youâ€™ll get a type error if you try to use them where a concrete value is expected.
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/tests/**/*"]
}
